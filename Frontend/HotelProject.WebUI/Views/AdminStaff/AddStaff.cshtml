@model AddStaffViewModel
@{
    ViewData["Title"] = "AddStaff";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<h1>Personel Ekleme Sayfası</h1>
<form method="post">
    <label>Personel Adı</label>
    <input type="text" asp-for="Name" class="form-control" />
    <br />
    <label>Personel Unvanı</label>
    <input type="text" asp-for="Title" class="form-control" />
    <br />
    <label>Personel Görseli(Url)</label>
    <input type="text" asp-for="StaffImageUrl" class="form-control" />
    <br />
    <label>Sosyal Medya 1</label>
    <input type="text" asp-for="SocialMedia1" class="form-control" />
    <br />
    <label>Sosyal Medya 2</label>
    <input type="text" asp-for="SocialMedia2" class="form-control" />
    <br />
    <label>Sosyal Medya 3</label>
    <input type="text" asp-for="SocialMedia3" class="form-control" />
    <br />
    <button class="btn mb-1 btn-rounded btn-outline-success">Personel Ekle</button>
</form>

