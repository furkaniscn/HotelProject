@model List<HotelProject.EntityLayer.Concrete.AppRole>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<div class="card-title">
    <h4>Rol Listesi</h4>
</div>
<table class="table table-striped">
    <tr>
        <th>#</th>
        <th>Rol Adı</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>
                <span class="label gradient-1 rounded">@item.Name</span>
            </td>
            <td><a href="/Role/DeleteRole/@item.Id" class="btn mb-1 btn-rounded btn-outline-danger">Sil</a></td>
            <td><a href="/Role/UpdateRole/@item.Id" class="btn mb-1 btn-rounded btn-outline-warning">Güncelle</a></td>
        </tr>
    }
</table>
<a href="/Role/AddRole/" class="btn mb-1 btn-rounded btn-outline-success">Yeni Rol Ekle</a>
